---
import Usercam from "./usercam.astro";
---

<div>
  <div class="background-container">
    <video
      class="background-video"
      src="../../src/layouts/video/hello 2.mp4"
      autoplay="true"
      loop></video>
  </div>
  <div class="usercam-container">
    <Usercam />
  </div>
</div>

<style>
  .background-container {
    position: fixed;
    top: 60px; /* Altura del header */
    left: 0;
    width: 100%;
    height: calc(
      100% - 60px
    ); /* Restar la altura del header para ocupar toda la pantalla */
    overflow: hidden;
    z-index: 1; /* Valor bajo para estar detrás de otros elementos */
  }

  .background-video {
    width: 100%;
    height: 90%;
    object-fit: cover; /* Ajustar el tamaño del video para cubrir completamente el contenedor */
  }

  .usercam-container {
    position: fixed;
    bottom: 0;
    right: 0;
    z-index: 2; /* Valor más alto para estar delante del video */
  }
</style>
